@{
    ViewData["Title"] = "Home Page"; 
}
@model Activitys

<div class="text-center">
    <div class="row">
        <div class="col-md">
            <h1 class="display-4">Create an Activity!</h1>
        </div>
        <div class="col-md">
            <button><a href="/Success">Dashboard</a> </button>
            <a href="/Logout"><button>LogOut</button></a>
        </div>
    </div>
    <div class="row">
        <div class="col-md">            
            <form asp-action="NewActivitys" asp-controller="Home" method="post">     

                <section>
                    <span asp-validation-for="Title"></span>
                    <label asp-for="Title">Title</label>
                    <input type="text" name="Title">
                </section>    

                <section>
                    <span asp-validation-for="Time"></span>
                    <label asp-for="Time">Time</label>
                    <input type="time" name="Time">
                </section>   

                <section>
                    <span asp-validation-for="Date"></span>
                    <label asp-for="Date">Date</label>
                    <input type="Date" name="Date">
                </section>   

                <section>
                    <span asp-validation-for="Duration"></span>
                    <label asp-for="Duration">Duration</label>
                    <input type="text" name="Duration">
                   
                    <select name="DurationType" id="">
                        <option value="Hours">Hours</option>
                        <option value="Minutes">Minutes</option>
                        <option value="Days">Days</option>
                    </select>


                </section>   

                <section>
                    <span asp-validation-for="Desc"></span>
                    <label asp-for="Desc">Description</label>
                    <input type="text" name="Desc">
                </section>   
                
                <input type="submit" value="Create Activity!">
            </form>
        </div>

        <div class="col-md">
        </div>
    </div>
</div>
